<ul id="post-comments-<%=post._id%>">
    <li>
    <% for(let comment of post.comment){%>
        <p>
            <%if (locals.user && locals.user.id == comment.user.id){%>
                <small>
                    <a class="delete-comment-button" href="/comments/destroy/<%=comment.id%>">X</a>
                </small>
            <%}%>
            <%=comment.content%>
            <br>
            <small>
                <%=comment.user.name%>
            </small>
        </p>

    <%}%>
</li>
</ul>